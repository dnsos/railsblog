<header class='<%= 
  [ 'border-b border-gray-500',
    'p-4',
    'flex place-content-between'
  ].join(' ')
%>'>
  <div>
    <%= link_to "Railsblog", locale_root_path %>
  </div>
  <nav>
    <ul class='flex gap-2'>
      <li><%= link_to_unless I18n.locale == :en, "EN", locale: :en %></li>
      <li><%= link_to_unless I18n.locale == :de, "DE", locale: :de %></li>
    </ul>
  </nav>
</header>