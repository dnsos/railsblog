<h1>
  <%= t('articles.all')%> 
  <span class='text-sm px-1 py-0.5 bg-red-300 rounded-md'>
    <%= Article.public_count %>
  </span>
</h1>

<% @articles.each do |article| %>
  <li class='mt-4'>
    <span class='block'>
      <%= l article.created_at %>
    </span>
    <h2>
      <%= link_to article.title, article %>
    </h2>
  </li>
<% end %>

<div class="block mt-4">
  <%= link_to t('articles.new'), new_article_path, class: 'bg-blue-700 text-white p-2' %>
</div>